<!DOCTYPE HTML>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="shortcut icon" type="image/png" href="{{ asset('favicon.ico') }}" />
        <title>{% block title 'Znieh Games' %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/jquery-ui-1.10.4.custom.css') }}"/>
            <!-- Generated by sass : -->
            <link rel="stylesheet" href="{{ asset('assets/css/layout.css') }}"/>

            <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
        {% endblock %}

        <!-- HTML5 Shim and Respond.js add IE8 support of HTML5 elements and media queries -->
        {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}

    </head>
    <body {% block initCreateJS '' %}>
        <div id="wrap">

            {% block navbar '' %} <!-- end block navbar -->

            {% block body '' %} <!-- end block body -->

            <br><br><br>

            {% block requirejs %}
                {{ include('::_requirejs.html.twig', { 'module': false }) }}
            {% endblock %} <!-- end requirejs block -->

            {% block javascripts %}
            <!-- TODO remove and put into requirejs -->
                <script type="text/javascript" src="http://momentjs.com/downloads/moment-with-langs.min.js"></script>
            {% endblock %}

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% block chat %}
                    {% include '::chat.html.twig' %}
                {% endblock %}
            {% endif %}

            {% block footer %}
                {% include '::footer.html.twig' %}
            {% endblock %} <!-- end block footer -->

        </div>

            {% block createJs '' %}

            <!-- Facebook Connect -->
            <script>
                function goLogIn() {
                    window.location.href = "{{ path('_security_check') }}";
                }

                function onFbInit() {
                    if (typeof(FB) != 'undefined' && FB != null ) {

                        $('#facebook-login').on('click', function(e) {
                            FB.login(function(response) {
                                if (response.authResponse) {
                                    setTimeout(goLogIn, 500);
                                }
                             }, {scope: 'email'});
                            e.preventDefault();
                        });

                        $('#facebook-logout').on('click', function(e) {
                            FB.logout(null);
                        });

                        FB.Event.subscribe('auth.statusChange', function(response) {
                            if (response.session || response.authResponse) {
                                setTimeout(goLogIn, 500);
                            } else {
                                window.location.href = "{{ path('_security_logout') }}";
                            }
                        });
                    }
                }
            </script>

