{% extends '::base.html.twig' %}

{% block requirejs %}
    {{ include('::_requirejs.html.twig', { 'module': 'app/create/unit' }) }}
{% endblock %}


{% block body %}
<div class="container">
      <h1>Création d'une nouvelle unité</h1>



      {{ form_start(form, { 'style': 'horizontal', 'label_col': 3, 'widget_col': 8 }) }}

      	{# {{ form(form) }} #}
			<div class="row">
				<div class="col-md-6">
					{{ form_row(form.name) }}
				</div>
			</div>
      		<div class="row">
      			<div class="col-md-6">
      				{{ form_row(form.sprite) }}
      				{{ form_row(form.sign) }}
      			</div>
      			<div class="col-md-6">
      				{{ form_row(form.size) }}
      				{{ form_row(form.weight) }}
      			</div>
      		</div>



          {# {{ form_row(form.name) }} #}
			


			<div class="form-group row">
				{{ form_label(form.weapon) }}
				<div class="col-lg-8">
					<table class="table">
					<thead>
					    <tr>
					        <th>Choix</th>
					        <th>Image</th>
					        <th>Points</th>
					        <th>Effets</th>
					        {# <th>Date de création</th> #}
					    </tr>
					</thead>
					<tbody>
					      {% for u in form.weapon %}
					         <tr>
					             <td>{{ form_widget(u) }}</td>  
					             <td>
					             	<img src="{{ asset('img/weapons/' ~ weapons[loop.index0].img ~'.png') }}" alt="" />
					              </td>     
					             <td>{{ weapons[loop.index0].points }}</td>
					             <td>
					             	<ul>
					             		{% for key, val in weapons[loop.index0].effects %}
					             			<li>{{ key ~ ' : ' ~ val }}</li>
					             		{% endfor %}
					             	</ul>
					             </td>
					             {# <td>{{ weapons[loop.index0].points|date("d/m/Y") }}</td> #}
					         </tr>
					      {% endfor %}
					</tbody>
					</table>

				</div>
				
			</div>
			
      {{ form_end(form) }}

    <a href="{{ path('znieh_unitgame_team_index') }}" class="btn btn-default">
              Retour
    </a>
</div>
<br><br><br><br>
{% endblock %}
