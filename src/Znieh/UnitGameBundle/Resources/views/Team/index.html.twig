{% extends '::base.html.twig' %}

{% block body %}
<div class="container">
    <div class="col-md-6">
        <h1>Liste de vos équipes</h1>

        {{ form_start(form, { 'style': 'horizontal', 'label_col': 3, 'widget_col': 8 }) }}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Sélection</th>
                    <th>Nom</th>
                    <th>Unités</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in form.teams %}
                <tr>
                    <td>
                    {% if teams[loop.index0].selected %}
                        {{ form_widget(entity, {checked: true }) }}
                    {% else %}
                        {{ form_widget(entity) }}        
                    {% endif %}
                    </td> 
                    <td>{{ teams[loop.index0].name }}</td>
                    <td>
                     <ul>
                        {% for unit in teams[loop.index0].units %}
                            <li>{{ unit.name }}</li>
                        {% endfor %}
                     </ul>
                    </td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('village_create_team_edit', { 'id': teams[loop.index0].id }) }}">modifier</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ form_end(form) }}

        <a href="{{ path('village_create_team_new') }}">
            Créer une nouvelle équipe
         </a>
    </div>
    <div class="col-md-6">
        <h1>Liste de vos unités</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Points combat</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in units %}
                <tr>
                    <td>{{ entity.points }}</td>
                    <td>{{ entity.name }}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('village_create_unit_edit', { 'id': entity.id }) }}">modifier</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('village_create_unit_new') }}">
             Créer une nouvelle unité
        </a>
    </div>
</div>
{% endblock %}
