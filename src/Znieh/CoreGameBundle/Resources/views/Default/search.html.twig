{% block body %}

<div class="modal fade" id="modalFight">
	<div class="modal-dialog">
		<div class="modal-content">
		  <div class="modal-header">
		    <h4 class="modal-title">Combattre</h4>
		  </div>
		  <div class="modal-body">
        <p>Click sur le bouton combattre pour commencer à combattre un autre joueur</p>
        <p>et pour rejoindre une pool !</p>
	    	<button id="fight" type="button" class="btn btn-primary btn-lg btn-middle">Combattre</button>
		  </div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="modalPools">
	<div class="modal-dialog modal-lg modal-large-pool">
		<div class="modal-content">
		  <div class="modal-header">
		    <h4 class="modal-title">Rejoindre une pool</h4>
		  </div>
		  <div class="modal-body">
		    <p>Choisis une des pools proposées pour rejoindre d'autres joueurs</p>
			  <div class="btn-group" data-toggle="buttons">
	    	</div>
      </div>

    	<div class="modal-footer">
	    	<button id="join" type="button" class="btn btn-primary" disabled="disabled" data-loading-text="Loading...">Rejoindre cette pool</button>
	 	</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

