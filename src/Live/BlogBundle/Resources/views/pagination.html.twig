<ul class="pagination">
  {% if page - 1 <= 0 %}
    <li class="disabled" ><a href="#">«</a></li>
  {% else %}
    <li><a rel="previous" href="{{ path('live_blog_public_index', {'page': page - 1 }) }}">«</a></li>
  {% endif %}
  {% for p in range(1, nombrePage) %}
    <li {% if p == page %} class="active" {% endif %} >
      <a href="{{ path('live_blog_public_index', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
  {% if page + 1 > nombrePage %}
    <li class="disabled" ><a href="#">»</a></li>
  {% else %}
    <li><a rel="next" href="{{ path('live_blog_public_index', {'page': page + 1 }) }}">»</a></li>
  {% endif %}
</ul>
